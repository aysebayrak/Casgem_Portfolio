@model List<Casgem_Portfolio.Models.Entities.TblProject>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_PortfolioAdminLayout.cshtml";
    int count = 0;
}

<h2>Projelerim</h2>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Proje Konusu</th>
        <th>Proje Konusu</th>
        
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@item.ProjectName</td>
            <td>@item.ProjectTopic</td>
            <td><a href="/Project/DeleteProject/@item.ProjectID" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Project/UpdateProject/@item.ProjectID" class="btn btn-outline-dark">Güncelle</a></td>
        </tr>
    }
</table>

